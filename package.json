{
  "name": "sweet-barista-game",
  "version": "1.0.0",
  "description": "Coffee Shop Sugar Drop Game - Browser-based casual game with shadcn + Tailwind CSS",
  "main": "index.html",
  "scripts": {
    "dev": "npx tailwindcss -i ./src/input.css -o ./styles.css --watch",
    "build": "npx tailwindcss -i ./src/input.css -o ./styles.css --minify",
    "serve": "python -m http.server 8002",
    "mcp:playwright": "node tools/playwright-mcp/cli.js",
    "mcp:playwright:browsers": "cd tools/playwright-mcp && npx playwright install"
  },
  "keywords": [
    "game",
    "html5",
    "canvas",
    "coffee",
    "arcade",
    "shadcn",
    "tailwind"
  ],
  "author": "Sweet Barista Game",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10"
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0"
  }
}
